{
  "name": "aimeos/prisma",
  "description": "A powerful PHP package for integrating media related Large Language Models (LLMs) into your applications",
  "type": "library",
  "license": "LGPL-2.1+",
  "require": {
    "php": "^8.1",
    "ext-gd": "*",
    "ext-fileinfo": "*",
    "guzzlehttp/guzzle": "^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.4",
    "phpstan/phpstan": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "Aimeos\\Prisma\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  }
}
